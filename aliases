alias c='clear'
alias r='source ~/.bash_profile'
alias ls='ls -G'

#tl: list sessions
alias tl='tmux ls'

#tn <name>: create a session named <name>
alias tn='tmux -2 new -s'

#ta <name>: attach to a session named <name>
alias ta='tmux -2 attach -d -t'

alias notify='terminal-notifier -message "DONE"'
